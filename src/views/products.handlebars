    {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}&limit={{limit}}{{#if query}}&query={{query}}{{/if}}{{#if sort}}&sort={{sort}}{{/if}}">Siguiente</a>
    {{/if}}
</div>